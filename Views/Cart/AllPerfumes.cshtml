@model List<ecommercestore.Models.Perfume>

@{
    ViewData["Title"] = "All Perfumes";
}

<h2 class="page-title">Perfume Collection</h2>

<div class="perfume-container">
    @foreach (var perfume in Model)
    {
        <div class="perfume-card">
            <img src="~/images/@perfume.imageurl" alt="@perfume.name" class="perfume-img" asp-append-version="true">

            <div class="perfume-details">
                <h5 class="perfume-name">@perfume.name</h5>
                <p class="perfume-price">Rs @perfume.price</p>

                
                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                    <input type="hidden" name="perfumeId" value="@perfume.Id" />
                    <label class="quantity-label">Quantity:</label>
                    <input type="number" name="quantity" value="1" min="1" class="quantity-input" required />
                    <button type="submit" class="add-to-cart-btn">Add to Cart</button>
                </form>
            </div>
        </div>
    }
</div>

<a asp-action="Index" class="back-link">Back to List</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background: linear-gradient(to right, #f8e2cf, #fbead6); /* Soft pastel background */
        font-family: 'Playfair Display', serif; /* Elegant font */
    }

    .page-title {
        text-align: center;
        font-size: 30px;
        color: #4a3f35;
        margin-bottom: 20px;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    /* Perfume Card Container */
    .perfume-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
        padding: 20px;
    }

    /* Individual Perfume Card */
    .perfume-card {
        background: white;
        width: 280px;
        padding: 15px;
        border-radius: 16px;
        box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.1);
        transition: 0.3s ease-in-out;
        text-align: center;
        border: 2px solid #e6c4a8; /* Subtle gold border */
    }

        .perfume-card:hover {
            box-shadow: 0px 10px 18px rgba(0, 0, 0, 0.2);
            transform: scale(1.05);
            background: #fff8f3;
        }

    /* Perfume Image */
    .perfume-img {
        width: 100%;
        height: 230px;
        object-fit: cover;
        border-radius: 12px;
    }

    /* Perfume Details */
    .perfume-details {
        padding: 12px;
    }

    .perfume-name {
        font-size: 20px;
        font-weight: bold;
        margin: 8px 0;
        color: #4a3f35;
    }

    .perfume-price {
        font-size: 16px;
        color: #775c50;
        font-weight: bold;
        margin-bottom: 12px;
    }

    /* Quantity Input */
    .quantity-label {
        font-size: 14px;
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
        color: #4a3f35;
    }

    .quantity-input {
        width: 60px;
        padding: 8px;
        text-align: center;
        border: 2px solid #e6c4a8;
        border-radius: 8px;
        margin-bottom: 10px;
        background: #fff8f3;
        font-weight: bold;
    }

    /* Add to Cart Button */
    .add-to-cart-btn {
        background: linear-gradient(90deg, #b38761, #d8a076);
        color: white;
        border: none;
        padding: 12px;
        border-radius: 8px;
        cursor: pointer;
        font-size: 15px;
        font-weight: bold;
        width: 100%;
        transition: 0.3s;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

        .add-to-cart-btn:hover {
            background: linear-gradient(90deg, #9d6e50, #b38761);
        }

    /* Back to List Link */
    .back-link {
        display: block;
        text-align: center;
        margin-top: 20px;
        font-weight: bold;
        color: #b38761;
        text-decoration: none;
        font-size: 16px;
    }

        .back-link:hover {
            text-decoration: underline;
            color: #9d6e50;
        }


</style>
