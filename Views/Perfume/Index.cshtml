    }

    h1 {
        color: #b38761;
        text-align: center;
        margin-bottom: 20px;
    }

    .create-btn {
        display: inline-block;
        background: #d8a076;
        color: white;
        padding: 10px 15px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: 0.3s;
    }

        .create-btn:hover {
            background: #b38761;
        }

    .table {
        width: 100%;
        margin-top: 15px;
        border-collapse: collapse;
    }

        .table th, .table td {
            border: 1px solid #ddd;
