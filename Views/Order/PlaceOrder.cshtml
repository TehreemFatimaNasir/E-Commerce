@model ecommercestore.Models.Order

@{
    ViewBag.Title = "Place Order";
}

<style>
   
    
    body {
        font-family: 'Playfair Display', serif;
        background: linear-gradient(to right, #f8e2cf, #fbead6);
        margin: 0;
        padding-top: 80px; 
    }

  
    .navbar {
        position: fixed;
        top: 0;
        width: 100%;
        background: white;
        padding: 15px 20px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        z-index: 1000;
    }

   
    .order-container {
        background: white;
        padding: 30px;
        border-radius: 16px;
        box-shadow: 0px 6px 16px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 90%;
        text-align: center;
        margin: auto;
        margin-top: 50px;
        border: 2px solid #b38761;
    }

    /* Title Styling */
    h2 {
        color: #b38761; /* Updated heading color */
        font-size: 26px;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 20px;
    }

    /* Success Message */
    .alert-success {
        background: #e6f4ea;
        color: #2a7031;
        border-left: 4px solid #2a7031;
        padding: 10px;
        font-size: 16px;
        font-weight: bold;
    }

    .checkout-btn {
        display: block;
        width: 100%;
        background: linear-gradient(90deg, #b38761, #d8a076); 
        color: white;
        padding: 14px;
        border: none;
        border-radius: 10px;
        font-size: 18px;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
        cursor: pointer;
        transition: 0.3s;
    }

        .checkout-btn:hover {
            background: linear-gradient(90deg, #9d6e50, #b38761);
        }

    .back-link {
        display: block;
        margin-top: 15px;
        color: #b38761; 
        font-size: 16px;
        text-decoration: none;
        font-weight: bold;
    }

        .back-link:hover {
            text-decoration: underline;
        }


</style>

<div class="order-container">
    <h2>Place Your Order</h2>

    @if (ViewBag.OrderSuccess != null)
    {
        <div class="alert alert-success">
            @ViewBag.OrderSuccess
        </div>
    }

   

    <div>
        <a asp-controller="Cart" asp-action="AllPerfumes" class="back-link">Back to List</a>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}